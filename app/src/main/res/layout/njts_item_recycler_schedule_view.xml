<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/njts_card_view_item_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0sp"
    android:layout_marginTop="0sp"
    android:layout_marginEnd="0sp"
    android:layout_marginBottom="0sp"
    android:background="@color/black"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="10sp"
    android:theme="@style/AppTheme.Schedule"
    app:cardBackgroundColor="@color/black"
    app:cardElevation="10sp"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/card_view_backgroup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/itemBackground"
        android:minHeight="0dp"
        android:padding="0sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/njts_rvs_livestatus"
            android:layout_width="26dp"
            android:layout_height="15dp"

            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/live_background"
            android:text="Live"
            android:textColor="@color/activity_background"
            android:textSize="8sp"
            android:textStyle="bold"
            android:translationZ="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/dv_time_round_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_njts_rvs_train_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_njtsrv_status">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/square_travel_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:elevation="20dp"
                android:translationZ="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/travel_rela_square"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:backgroundTint="?attr/submitBackground"
                    android:transitionName="shareView"
                    android:translationZ="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_travel_sq_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="122"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:translationZ="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/square_time_layout" />
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="travel minutes"
                android:textColor="@color/white"
                android:textSize="6sp"
                android:translationZ="20dp"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/square_travel_time_layout"
                app:layout_constraintVertical_bias="1.0" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/njts_rv_intime_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:translationZ="20dp"
            app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
            app:layout_constraintTop_toTopOf="@+id/relativeLayout">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/square_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                android:translationZ="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/njts_intime_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="in min"
                    android:textAlignment="center"
                    android:textSize="6sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/rela_square"
                    app:layout_constraintStart_toStartOf="@+id/njts_rv_intime_layout"
                    app:layout_constraintTop_toBottomOf="@+id/rela_square" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/rela_square"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:backgroundTint="?attr/submitBackground"

                    android:transitionName="shareView"
                    android:translationZ="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/tv_njts_rv_intime"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="99"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:translationZ="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/njts_rv_track_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="20dp"
            android:translationZ="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dv_time_round_layout">


            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_njtsrv_track_background"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_centerVertical="true"
                android:background="@drawable/round"

                android:backgroundTint="@color/gray_light"
                android:transitionName="shareView"
                android:translationZ="-10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/tv_njts_rv_track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="12"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv_njts_rvs_train_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"

            android:layout_marginTop="16dp"
            android:autoText="true"

            android:background="@drawable/train_background"
            android:fontFamily="@font/roboto_medium"
            android:text="North east corridor"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:translationZ="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_njtsrv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginStart="24dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/njts_rv_track_layout"
            android:text="BOARDING"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_njts_rvs_train_name" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="10sp"
            android:layout_height="wrap_content"
            android:elevation="-40sp"
            android:orientation="vertical"
            android:translationZ="-40sp"
            app:layout_constraintGuide_end="109dp" />


        <TextView
            android:id="@+id/tv_njts_dvs_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="12:28 AM"
            android:textSize="18sp"
            android:translationZ="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/njts_srv_blockID" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/njtsrv_sidebar"
            android:layout_width="23dp"
            android:layout_height="0dp"
            android:layout_marginStart="100dp"
            android:background="@color/app_red"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_njts_dvs_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/app_red"
            android:text="01:20 AM"
            android:textSize="18sp"
            android:translationZ="20sp"
            app:layout_constraintStart_toStartOf="@+id/tv_njts_dvs_departure"
            app:layout_constraintTop_toBottomOf="@+id/tv_njts_dvs_departure" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" arrival time"
            android:textAlignment="center"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_njts_dvs_arrival"
            app:layout_constraintStart_toStartOf="@+id/tv_njts_dvs_arrival"
            app:layout_constraintTop_toBottomOf="@+id/tv_njts_dvs_arrival" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:padding="0sp"
            app:layout_constraintEnd_toStartOf="@+id/njts_rv_track_layout"
            app:layout_constraintTop_toTopOf="@+id/njts_rv_track_layout">

            <ImageView
                android:id="@+id/ntsrv_fav_img"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="8sp"
                android:src="@drawable/ic_outline_favorite_border_24px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_route_card_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="8sp"
                android:src="@drawable/ic_outline_refresh_24px"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/ntsrv_fav_img"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_route_card_change_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="8sp"
                android:src="@drawable/ic_outline_transform_24px"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/img_route_card_refresh"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/njts_srv_blockID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="#2135"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/tv_njts_rvs_train_name"
            app:layout_constraintTop_toTopOf="@+id/tv_njts_rvs_train_name" />

        <TextView
            android:id="@+id/njts_rvs_dv_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="departure vision status"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_njtsrv_status"
            app:layout_constraintStart_toStartOf="@+id/tv_njtsrv_status" />

        <!--RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rela_round"
