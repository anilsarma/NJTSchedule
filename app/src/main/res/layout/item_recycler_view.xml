<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_item_recycler_viev"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
    android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
    android:background="@color/black"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/card_view_backgroup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_green"
        android:padding="@dimen/text_margin">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:translationZ="20dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_dv_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/live_background"
                android:text="Live"
                android:textColor="@color/activity_background"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/rela_round"
            android:layout_width="45dp"
            android:layout_height="47dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/gray_light"
            android:transitionName="shareView"
            android:translationZ="-10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_round_track"
                android:layout_width="28dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#edf2f7"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv_dv_item_train_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/rela_round"
            android:autoText="true"
            android:background="@drawable/train_background"
            android:fontFamily="sans-serif-black"
            android:text="@string/tv_recycler_item_1"
            android:textAllCaps="false"
            android:textColor="@color/app_green_dark"
            android:textSize="10sp"
            android:translationZ="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_recycler_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_toEndOf="@id/rela_round"
            android:text="@string/tv_recycler_item_2"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_dv_item_train_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_dv_item_train_name" />

        <TextView
            android:id="@+id/tv_recycler_item_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@id/rela_round"
            android:text="@string/tv_recycler_item_3"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_recycler_item_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_recycler_item_2" />

        <TextView
            android:id="@+id/tv_recycler_item_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8sp"
            android:layout_toEndOf="@id/rela_round"
            android:text="@string/tv_recycler_item_3"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="@+id/tv_recycler_item_3"
            app:layout_constraintTop_toBottomOf="@+id/tv_recycler_item_3" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="56dp" />


        <TextView
            android:id="@+id/tv_dv_block_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Block ID"
            app:layout_constraintStart_toEndOf="@+id/tv_dv_item_train_name"
            app:layout_constraintTop_toTopOf="@+id/tv_dv_item_train_name" />

