<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_jay"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/train_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/train_background"
                android:text="Northeast #7817"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:translationZ="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/track_number"
                android:layout_width="36sp"
                android:layout_height="36sp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/card_text_border_green"
                android:gravity="center"
                android:padding="5sp"
                android:text="6"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:translationZ="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/train_name" />
            <!--Button
                android:id="@+id/detail_button"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:textColor="#ffffff"
                android:textSize="6sp"
                android:layout_gravity="right|center"
                android:typeface="serif"
                android:background="@drawable/round_button"
                android:text="details" /-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/details_line_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="1sp"
        android:visibility="visible">

        <TextView
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:padding="2sp"
            android:paddingStart="20sp"
            android:text="Northeast #7817"
            android:textColor="#8000FF00"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:padding="2sp"
            android:paddingStart="30sp"
            android:text=" "
            android:textColor="#8000FF00"
            android:textSize="12sp" />

        <Button
            android:id="@+id/detail_button"
            android:layout_width="wrap_content"
            android:layout_height="10sp"
            android:layout_gravity="right"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/round_button"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:text="details"
            android:textColor="#ffffff"
            android:textSize="8sp"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/train_status_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10sp">

        <TextView
            android:id="@+id/train_status_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:gravity="center_horizontal"
            android:padding="5sp"
            android:text="Status"
            android:textColor="#FFFFFFFF"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/track_status_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="0sp"
            android:paddingStart="5sp"
            android:text="Track 6, Route Delayed"

            android:textColor="#7FFFFFFF"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/train_live_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10sp">

        <TextView
            android:id="@+id/train_live_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:gravity="center_horizontal"
            android:paddingStart="5sp"
            android:paddingEnd="16sp"
            android:text="Live"
            android:textColor="#FFFFFFFF"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/train_live_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="0sp"
            android:paddingStart="5sp"
            android:text="Train leaves in 100 minutes"

            android:textColor="#7FFFFFFF"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0sp">

            <ImageView
                android:id="@+id/img_route_card_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="8sp"
                android:src="@drawable/ic_outline_favorite_border_24px" />

            <ImageView
                android:id="@+id/img_route_card_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8sp"
                android:layout_toStartOf="@id/img_route_card_favorite"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="8sp"
                android:src="@drawable/ic_outline_refresh_24px" />

            <ImageView
                android:id="@+id/img_route_card_change_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8sp"
                android:layout_toStartOf="@id/img_route_card_refresh"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="8sp"
                android:src="@drawable/ic_outline_transform_24px" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.percentlayout.widget.PercentRelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".7">

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_centerInParent="true"
                android:background="@drawable/route_divider"
                app:layout_widthPercent="80%"></View>
        </androidx.percentlayout.widget.PercentRelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1,2,3">

            <TableRow>

                <TextView

                    android:layout_column="1"
                    android:gravity="center"
                    android:text="Departure"
                    android:textColor="#7FFFFFFF" />

                <TextView

                    android:layout_column="2"
                    android:gravity="center"
                    android:text="Duration"
                    android:textColor="#7FFFFFFF" />

                <TextView
                    android:layout_column="3"
                    android:gravity="center"
                    android:text="Arrive at"
                    android:textColor="#7FFFFFFF" />
            </TableRow>

            <TableRow android:paddingTop="0sp">

                <TextView
                    android:id="@+id/departure_time"
                    android:layout_column="1"

                    android:gravity="center"
                    android:text="7:45AM"

                    android:textColor="#AFFFFFFF"
                    android:textSize="17sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_column="2"
                    android:gravity="center"
                    android:text="81 min"

                    android:textColor="#AFFFFFFF"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/arrival_time"
                    android:layout_column="3"
                    android:gravity="center"
                    android:text="10:20AM"

                    android:textColor="#AFFFFFFF"
                    android:textSize="17sp"
                    android:textStyle="normal" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>
