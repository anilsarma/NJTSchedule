<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asarma.njrails.RouteActivity">

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <TextView
                android:id="@+id/route_header"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#01579B"
                android:gravity="center"
                android:padding="0dp"
                android:text="Train Details"
                android:textColor="#FFFFFF"
                android:textSize="20px" />

            <TextView
                android:id="@+id/route_details"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/route_header"
                android:background="#80D8FF"
                android:gravity="center"
                android:padding="0dp"
                android:text="Pull down to refresh"
                android:textColor="#000000"
                android:textSize="20px" />

            <LinearLayout
                android:id="@+id/station_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/route_details"
                android:background="#90CAF9"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/routes_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E0E0E0"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/start_station_spinner"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:background="#00838F"
                    android:textSize="90px"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/stop_station_spinner"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:height="200px"
                    android:background="#E0E0E0"
                    android:textSize="40sp"

                    android:visibility="visible" />

                <Button
                    android:id="@+id/station_query_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/status_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/station_query"
                android:height="0px"
                android:background="#90CAF9"
                android:orientation="vertical"
                android:visibility="invisible">

                <Spinner
                    android:id="@+id/station_status_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E0E0E0"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/status_query_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit" />
            </LinearLayout>


            <!--LinearLayout
            https://material.io/guidelines/style/color.html#color-color-palette

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:showDividers="middle"
                android:divider="?android:dividerHorizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/route_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text="Train Details" />


            </LinearLayout-->

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/route_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/status_query"
                android:padding="5dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="?android:dividerHorizontal"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TableLayout
                        android:id="@+id/routes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="?android:dividerHorizontal"
                        android:showDividers="middle">

                    </TableLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.constraint.ConstraintLayout>
